section: "residential"
promotionName: "You can't really lose"
customClass: "promo-aoa"
openTermsAndConditionsInNewPage: "yes"
---

<section class="header white-type text-center">
  <h2 class="margin-zero">Power you can love</h2>
</section>

<div class="light-grey">
  <div class="row">
    <div class="small-12 small-centered medium-11 columns end white offset-container">
      <section class="padding">
        <div class="row text-center">
          <div class="small-11 small-centered medium-10 columns end ">
            <h2 class="pink-type">Get better power Whangarei & Kaipara</h2>
            <h3>The power company Kiwis love is available in Whangarei, Dargaville, Ruakaka, Waipu, Ngunguru, Mangawhai and more...</h3>
          </div>
        </div>
      </section>

      <section>
        <div class="row text-center">
          <div class="small-11 small-centered medium-11 columns end padding-bottom-last">
            <h3>Switch to a better power deal</h3>
            <div class="free-power-and-sg">
              <div class="free-power"><%= partial "assets/images/promos/aoa/150-credit.svg" %></div>
              <div class="plus-icon"><%= partial "assets/images/promos/aoa/plus.svg" %></div>
              <div class="sg-badge"><%= partial "assets/images/promos/aoa/sg-badge.svg" %></div>
            </div>
            <p class="big">
              When you switch your main home to Powershop we’ll give you $150 free power, spread over your first six months. You’re also <a href="/guaranteed-savings">guaranteed to save</a> in your first year. Terms and conditions apply.
            </p>
            <hr/>
              <%= partial "shared/plan_options" %>
          </div>
        </div>
      </section>

    </div>
  </div>
</div>

<section class="light-grey">
  <div class="row padding-bottom-last">
  <div class="small-12 small-centered medium-12 columns end">
    <div class="padding">
      <%= partial "shared/got_questions" %>
    </div>
  </div>
  </div>
</section>

<script type="text/javascript">
  $(document).ready(function(){
    var cookie = readCookie("questionsOpen");
    if (cookie === "yes") {
      $('#got-questions').show();
    }
    $('#got-questions-link').click(function(){
      createCookie("questionsOpen", "yes", 1);
    })
  });
</script>
