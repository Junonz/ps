<script type="text/javascript">
    $(document).ready(function() {
        // Define Vimeo player
        var iframe = $('#intro-video')[0];
        var player = $f(iframe);
        // Hide video overlay and PLAY
        $('.intro-video .small-12').click(function(event) {
            $('.vimeo').addClass("hideAfter");
            $('.intro-video h2').fadeOut();
            $('.intro-video p').fadeOut();
            player.api('play');
        });
    });
</script>

<section class="bg-gradient intro-video">
    <div class="row padding">
        <div class="small-12 small-centered columns end">
            <div class="vimeo">
                <div class='embed-container'>
                    <iframe sandbox="allow-same-origin allow-scripts" id="intro-video" src='https://player.vimeo.com/video/108967118?title=0&amp;byline=0&amp;portrait=0' frameborder='0' webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
                </div>
            </div>
            <div class="play-container">
                <h2 class="text-center white-type">
                    You've had electricity.<br/>Now you've got power<br/>
                    <img alt="" title="" class="play-btn" src="/assets/images/homes/play.min.svg" />
                </h2>
                <p class="text-center white-type"><span class="time">01:00<br/><br/></span>See what the future of electricity looks likeâ€¦</p>
            </div>
        </div>
    </div>
</section>

